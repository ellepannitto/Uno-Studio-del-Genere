	echo '"'"$id"'"=> "https://maps.googleapis.com/maps/api/geocode/xml?address=".urlencode(' " \"UniversitÃ  $nome\"" ')."&key=AIzaSyBNbSHpD55qfU-m2WbrhoPEEIAHFEIIKVE",' >>$o
	
done < lista_atenei.txt 

